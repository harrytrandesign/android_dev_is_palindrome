<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_state_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingStart="6dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/imageview_result"
            android:layout_width="@dimen/result_icon_size"
            android:layout_height="@dimen/result_icon_size"
            android:layout_marginEnd="6dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/check_mark"/>

        <TextView
            android:id="@+id/textview_word_checked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/item_text_placeholder"
            android:textColor="@color/list_text_color"
            android:textSize="@dimen/list_text_size"
            tools:text="Test Word"/>

        <!--<TextView-->
        <!--android:id="@+id/textview_result"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/item_binary_placeholder"-->
        <!--android:textAllCaps="true"-->
        <!--android:textColor="@color/result_true"-->
        <!--android:textStyle="bold"-->
        <!--tools:text="True"/>-->
    </LinearLayout>

</LinearLayout>